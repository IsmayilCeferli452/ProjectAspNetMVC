@using static Project.ViewComponents.HeaderViewComponent
@model HeaderVM

<!-- Spinner Start -->
<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<!-- Spinner End -->
<!-- Navbar Start -->
<nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
    <a asp-controller="Home" asp-action="Index" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
        <h2 class="m-0 text-primary"><i class="@Model.Settings["LogoIcon"]"></i>@Model.Settings["LogoText"]</h2>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Home</a>
            <a asp-controller="About" asp-action="Index" class="nav-item nav-link">About</a>
            <a asp-controller="Courses" asp-action="Index" class="nav-item nav-link">Courses</a>
            <div class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                <div class="dropdown-menu fade-down m-0">
                    <a asp-controller="Pages" asp-action="Index" class="dropdown-item">Our Team</a>
                    <a asp-controller="Pages" asp-action="Testimonal" class="dropdown-item">Testimonial</a>
                    <a asp-controller="Pages" asp-action="ErrorPage" class="dropdown-item">404 Page</a>
                </div>
            </div>
            <a asp-controller="Contact" asp-action="Index" class="nav-item nav-link">Contact</a>
        </div>
        <a asp-controller="Account" asp-action="Signin" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Login<i class="fa fa-arrow-right ms-3"></i></a>
    </div>
</nav>
<!-- Navbar End -->
