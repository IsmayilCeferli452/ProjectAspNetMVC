@model StudentDetailVM
@{
    ViewData["Title"] = "Details";
}

<div style="width: 350px;" class="card m-auto d-flex align-items-center justify-content-center">
    <div class="card-body d-grid justify-content-center">
        <h4 class="card-title">Student:</h4>
        <div class="d-flex">
            <div class="d-flex align-items-center text-muted font-weight-light">
                <span>@Model.Student.Fullname</span>
            </div>
        </div>
        <div class="mt-5 ">
            <div class="image mb-5">
                <img src="~/img/@Model.Student.Image" style="width:300px;height:200px; border-radius:50%;" alt="" />
            </div>
            <div class="mb-0 mt-3 flex-grow ">
                </ul>
                <h5 class="me-2 mb-2">Profession:</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-0">@Model.Student.Profession</li>
                </ul>
                <h5 class="me-2 mb-2">Student info:</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-0">@Model.Student.StudentInfo</li>
                </ul>
            </div>
            <div class="mb-0 mt-3 flex-grow d-flex">
                <h5>Course Count: @Model.Student.StudentCourses.Count()</h5>
            </div>
        </div>
    </div>
</div>



