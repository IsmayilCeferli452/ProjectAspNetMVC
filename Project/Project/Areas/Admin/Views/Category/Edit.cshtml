@model CategoryEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-3">
    <h1><b>Edit category</b></h1>
    <form class="form-sample mt-5" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label"><b>Category</b></label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" maxlength="100" placeholder="Add category name..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="image mb-5">
                        <img src="~/img/@Model.Image" style="width:200px;height:200px; border-radius:50%;" alt="" />
                    </div>
                    <div class="form-group">
                        <label for="inputCategoryName">Upload new image</label>
                        <input asp-for="NewImage" accept="image/*" class="form-control" id="inputCategoryName">
                        <span asp-validation-for="NewImage" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a type="submit" class="btn btn-danger" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>